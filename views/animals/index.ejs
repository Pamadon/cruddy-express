    <body>
        <ul>
          <% for (var i = 0; i < animals.length; i++) { %>
            <li>
              <a href= <%="/animals/" + i %> >
                <%= animals[i].name %> - <%= animals[i].type %>
              </a>
              ----------
              <a class="delete-animal" href= <%="/animals/" + i %> >
                Delete me.
              </a>
            </li>
        <% } %>
        </ul>

        <form action="/animals" method="post">
          <label for="animal-name">Animal Name:</label>
          <input type="text" name="animal-name">

          <label for="animal-type"></label>
          <input type="text" name="animal-type">

          <input type="submit" value="Create new animal">
        </form>
    </body>
